@model IEnumerable<StaffManagement.Models.Department>
@using Microsoft.AspNetCore.Http;
@inject IHttpContextAccessor HttpContextAccessor
@{
    ViewData["Title"] = "Department Management";
    var role = HttpContextAccessor.HttpContext.Session.GetString("Role");
}
<br>
@if (role == "Admin")
{
    <p>
        <a asp-action="Create" class="btn btn-primary"> <i class="fa fa-plus"></i> Add New Department</a>
    </p>
}


<div class="card">
    <div class="card-header">
        <h3 class="card-title">Department List</h3>
    </div>

    <div class="card-body">
        <table id="example1" class="table table-bordered table-striped">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Code)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        Create By
                    </th>
                    @if (role == "Admin")
                    {
                        <th>
                            Edit
                        </th>
                        <th>
                            View
                        </th>
                        <th>
                            Delete
                        </th>
                    }
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Code)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.User.Name)
                        </td>
                        @if (role == "Admin")
                        {
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.DepartmentId" class="btn btn-primary"> <i class="fa fa-pen"></i> Edit</a>
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@item.DepartmentId" class="btn btn-warning"> <i class="fa fa-eye"></i> Details</a>
                            </td>
                            <td>
                                <a asp-action="Delete" asp-route-id="@item.DepartmentId" class="btn btn-danger"> <i class="fa fa-trash"></i> Delete</a>
                            </td>
                        }
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>